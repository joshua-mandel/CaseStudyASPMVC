@model Product
@{
	string title = ViewBag.Action + " Product";
	ViewData["Title"] = title;
}

<h2 class="mb-3">@ViewBag.Title</h2>

<div class="col-md-6 col-lg-4">
	<form asp-action="Edit" method="post">
		<div asp-validation-summary="All" class="text-danger"></div>

		<div class="mb-3">
			<label asp-for="ProductCode" class="form-label">Code</label>
			<input asp-for="ProductCode" class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="ProductName" class="form-label">Name</label>
			<input asp-for="ProductName" class="form-control" />
		</div>


		<div class="mb-3">
			<label asp-for="YearlyPrice" class="form-label">Yearly Price</label>
			<input asp-for="YearlyPrice" class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="ReleaseDate" class="form-label">Release Date</label>
			<input asp-for="ReleaseDate" class="form-control" />
		</div>
		<input type="hidden" asp-for="ProductId" />

		<button type="submit" class="btn btn-primary">Save</button>
		<a asp-controller="Product" asp-action="List" class="btn btn-secondary">Cancel</a>
	</form>
</div>

