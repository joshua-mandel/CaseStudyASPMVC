@model Technician
@{
	string title = ViewBag.Action + " Technician";
	ViewData["Title"] = title;
}

<h2 class="mb-3">@ViewBag.Title</h2>

<div class="col-md-6 col-lg-4">
	<form asp-action="Edit" method="post">
		<div asp-validation-summary="All" class="text-danger"></div>

		<div class="mb-3">
			<label asp-for="TechnicianName" class="form-label">Name</label>
			<input asp-for="TechnicianName" class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="TechnicianEmail" class="form-label">Email</label>
			<input asp-for="TechnicianEmail" class="form-control" />
		</div>


		<div class="mb-3">
			<label asp-for="TechnicianPhone" class="form-label">Phone</label>
			<input asp-for="TechnicianPhone" class="form-control" />
		</div>
		<input type="hidden" asp-for="TechnicianId" />

		<button type="submit" class="btn btn-primary">Save</button>
		<a asp-controller="Technician" asp-action="List" class="btn btn-secondary">Cancel</a>
	</form>
</div>

